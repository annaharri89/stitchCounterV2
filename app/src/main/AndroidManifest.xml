<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".StitchCounterApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StitchCounterV3"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StitchCounterV3">
        </activity>
        
        <!-- Activity aliases for theme-specific launcher icons -->
        <activity-alias
            android:name=".SeaCottageLauncherAlias"
            android:targetActivity=".MainActivity"
            android:enabled="true"
            android:icon="@mipmap/ic_launcher_sea_cottage"
            android:roundIcon="@mipmap/ic_launcher_sea_cottage_round"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        
        <activity-alias
            android:name=".RetroSummerLauncherAlias"
            android:targetActivity=".MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_retro_summer"
            android:roundIcon="@mipmap/ic_launcher_retro_summer_round"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        
        <activity-alias
            android:name=".DustyRoseLauncherAlias"
            android:targetActivity=".MainActivity"
            android:enabled="false"
            android:icon="@mipmap/ic_launcher_dusty_rose"
            android:roundIcon="@mipmap/ic_launcher_dusty_rose_round"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
    </application>

</manifest>